<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_menu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu 1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_menu1_makanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Makanan (Wajib)"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_menu1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_menu1_lauk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Lauk (Opsional)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_menu1_makanan"
        app:layout_constraintStart_toStartOf="@id/til_menu1_makanan"
        app:layout_constraintEnd_toEndOf="@id/til_menu1_makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_menu2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu 2"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_menu1_lauk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_menu2_makanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Makanan (Wajib)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_menu2"
        app:layout_constraintStart_toStartOf="@id/til_menu1_makanan"
        app:layout_constraintEnd_toEndOf="@id/til_menu1_makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_menu2_lauk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Lauk (Opsional)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_menu2_makanan"
        app:layout_constraintStart_toStartOf="@id/til_menu1_makanan"
        app:layout_constraintEnd_toEndOf="@id/til_menu1_makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_menu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu 3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_menu2_lauk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_menu3_makanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Makanan (Wajib)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_menu3"
        app:layout_constraintStart_toStartOf="@id/til_menu1_makanan"
        app:layout_constraintEnd_toEndOf="@id/til_menu1_makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_menu3_lauk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jenis Lauk (Opsional)"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/til_menu3_makanan"
        app:layout_constraintStart_toStartOf="@id/til_menu1_makanan"
        app:layout_constraintEnd_toEndOf="@id/til_menu1_makanan">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/til_menu3_lauk"
        app:layout_constraintStart_toStartOf="@id/til_menu1_makanan"
        app:layout_constraintEnd_toEndOf="@id/til_menu1_makanan"/>

</androidx.constraintlayout.widget.ConstraintLayout>